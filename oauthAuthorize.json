	<script>
		function getParameterByName(name, url) {
			if (!url) {
				url = window.location.href;
			}
			name = name.replace(/[\[\]]/g, "\\$&");
			var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
			results = regex.exec(url);
			if (!results) return null;
			if (!results[2]) return '';
			return decodeURIComponent(results[2].replace(/\+/g, " "));
		}
		$(function() {
		 	"use strict";
			// Request verify
			$("#verify_button").on("click", function() {
				var redirect_uri = getParameterByName("r");
				var wsdata = {
					service: 'v2/account',
					method: 'requestverify',
					data : {
						email: $(".email").val()
					}
				};

				if(redirect_uri != null) {
					wsdata.data.redirect_uri = redirect_uri;
				}

				wiService.call(wsdata).done(function(data) {
					$("form").addClass("hide");
					$(".alert-danger").addClass("hide");
					$(".alert-success").append('<li>Un lien de réactivation vous a été envoyé. Merci de vérifier votre boîte de réception.</li>');
					$(".alert-success").removeClass("hide");
				});
			});

			//Form submit
			$("form").on("submit", function() {
			 	//Remove previous alerts
			 	$(".alert").remove();
			 	$('.form-group').removeClass('has-error');

				var errors = [];
				var reg = /^.+\@.+\..+|account:\d+$/;

				var $mail 		= $(".email");
				var $password 	= $(".password");

				//Check errors
				if ($mail.val() == "") {
					errors.push("Veuillez entrer un e-mail");
					$mail.parent().addClass("has-error");
				} else if (!reg.test($mail.val())) {
					errors.push("Le format de l'adresse e-mail est incorrect.");
					$mail.parent().addClass("has-error");
				} else if ($password.val() == "") {
					errors.push("Veuillez entrer un mot de passe");
					$password.parent().addClass("has-error");
				}

				if (errors.length) {
					var e = "<div class='alert alert-danger'>";
					for (var error in errors) {
						e += errors[error];
					}
					e += "</div>";
					$("form").before(e);
					return false;
				}
			});
		});	</script>	</body>
